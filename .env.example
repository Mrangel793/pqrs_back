# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS - SQL Server
# =============================================================================
# Formato: mssql+pyodbc://usuario:contraseña@servidor/base_datos?driver=DRIVER
# Ejemplo con autenticación SQL:
#   DATABASE_URL=mssql+pyodbc://sa:MiPassword123@localhost:1433/db_pqrs?driver=ODBC+Driver+17+for+SQL+Server
# Ejemplo con autenticación Windows:
#   DATABASE_URL=mssql+pyodbc://servidor/db_pqrs?driver=ODBC+Driver+17+for+SQL+Server&trusted_connection=yes
DATABASE_URL=mssql+pyodbc://user:pass@server/db_pqrs?driver=ODBC+Driver+17+for+SQL+Server

# =============================================================================
# SEGURIDAD - JWT Authentication
# =============================================================================
# Generar SECRET_KEY segura con: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=tu-secret-key-segura-aqui-cambiar-en-produccion
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=8

# =============================================================================
# MICROSOFT GRAPH API - Integración de Correo Electrónico
# =============================================================================
# Obtener credenciales en: https://portal.azure.com (Azure AD > App registrations)
MICROSOFT_CLIENT_ID=tu-client-id-aqui
MICROSOFT_CLIENT_SECRET=tu-client-secret-aqui
MICROSOFT_TENANT_ID=tu-tenant-id-aqui
MAILBOX_ADDRESS=pqr@entidad.gov.co

# =============================================================================
# ALMACENAMIENTO DE ARCHIVOS
# =============================================================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=10

# =============================================================================
# APLICACIÓN
# =============================================================================
APP_NAME=Sistema PQR Escaladas
DEBUG=True

# =============================================================================
# CORS - Orígenes Permitidos
# =============================================================================
# Formato JSON array de strings
# Desarrollo:
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
# Producción (ejemplo):
# CORS_ORIGINS=["https://pqr.entidad.gov.co"]
